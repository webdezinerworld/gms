extends layout

block content
	form#formAddUser(name="adduser",method="post",action="/loginuser" class="formContainers")
		h3= title
		div(class="form-group")
			label(for="username") User name
			input#inputUserName(type="text", placeholder="username", name="username" class="form-control")
		div(class="form-group")
			label(for="useremail") Password
			input#inputUserEmail(type="password", placeholder="Password", name="password" class="form-control")
		button#btnSubmit(type="submit" class="btn btn-default") Login
	p= error